{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja-gcc-debug",
            "displayName": "Ninja + GCC (Debug)",
            "description": "使用Ninja和GCC编译器构建Debug版本",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "ninja-gcc-release",
            "displayName": "Ninja + GCC (Release)",
            "description": "使用Ninja和GCC编译器构建Release版本",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "ninja-gcc-toolchain-debug",
            "displayName": "Ninja + GCC Toolchain (Debug)",
            "description": "使用GCC工具链文件构建Debug版本",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/gcc-debug",
            "toolchainFile": "${sourceDir}/cmake/toolchain-gcc.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ninja-gcc-toolchain-release",
            "displayName": "Ninja + GCC Toolchain (Release)",
            "description": "使用GCC工具链文件构建Release版本",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/gcc-release",
            "toolchainFile": "${sourceDir}/cmake/toolchain-gcc.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "构建Debug版本",
            "configurePreset": "ninja-gcc-debug",
            "jobs": 4
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "构建Release版本",
            "configurePreset": "ninja-gcc-release",
            "jobs": 4
        },
        {
            "name": "gcc-debug",
            "displayName": "GCC Debug",
            "description": "使用GCC工具链构建Debug版本",
            "configurePreset": "ninja-gcc-toolchain-debug",
            "jobs": 4
        },
        {
            "name": "gcc-release",
            "displayName": "GCC Release",
            "description": "使用GCC工具链构建Release版本",
            "configurePreset": "ninja-gcc-toolchain-release",
            "jobs": 4
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "测试Debug版本",
            "configurePreset": "ninja-gcc-debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "测试Release版本",
            "configurePreset": "ninja-gcc-release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "gcc-debug",
            "displayName": "GCC Debug",
            "description": "测试GCC工具链Debug版本",
            "configurePreset": "ninja-gcc-toolchain-debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "gcc-release",
            "displayName": "GCC Release",
            "description": "测试GCC工具链Release版本",
            "configurePreset": "ninja-gcc-toolchain-release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "default",
            "displayName": "默认工作流",
            "description": "配置、构建和测试Debug版本",
            "steps": [
                {
                    "type": "configure",
                    "name": "ninja-gcc-debug"
                },
                {
                    "type": "build",
                    "name": "debug"
                }
            ]
        },
        {
            "name": "gcc-toolchain",
            "displayName": "GCC工具链工作流",
            "description": "使用GCC工具链配置、构建和测试Debug版本",
            "steps": [
                {
                    "type": "configure",
                    "name": "ninja-gcc-toolchain-debug"
                },
                {
                    "type": "build",
                    "name": "gcc-debug"
                },
                {
                    "type": "test",
                    "name": "gcc-debug"
                }
            ]
        }
    ]
}